{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["google"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint"],
  "rules": {
    "linebreak-style": "off",
    "indent": ["warn", 4],
    "new-cap": "off",
    "object-curly-spacing": "off",
    "max-len": "off",
    "semi": "warn",
    "require-jsdoc": "off",
    "no-unused-vars": "off",
    "padded-blocks": "off"
  }
}
